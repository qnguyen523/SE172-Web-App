<!-- styling -->
<style>
/*td{font-size: 14px;line-height: 30px;}*/
h5{font-size: 14px;}
/*.about-text{font-size: 14px; line-height: 30px}*/
.page-header{padding-bottom:9px;margin:40px 0 20px;border-bottom:1px solid #eee}

.table{width:100%;max-width:160%;margin-bottom:0px}
.table-striped>tbody>tr:nth-of-type(odd){background-color:#f9f9f9;}
</style>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  This ad is posted by <strong><%= link_to @post.user.first, @post.user %> </strong>
</p>

<p><strong> A list of books on my ad:</strong></p>

<div id="books_part">
	<%- model_class = Book -%>
	<div class="page-header">
	  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
	</div>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:picture) %></th>
	      <th><%= model_class.human_attribute_name(:title) %></th>
	      <th><%= model_class.human_attribute_name(:edition) %></th>
	      <th><%= model_class.human_attribute_name(:author) %></th>
	      <th><%= model_class.human_attribute_name(:subject) %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @books.each do |book| %>
	      <tr>
	        <td><%= image_tag book.picture.url, size: "116x150" %></td>
	        <td><%= book.title %></td>
	        <td><%= book.edition %></td>
	        <td><%= book.author %></td>
	        <td><%= book.subject %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<!-- No new link -->
	<p>
	</p>
</div>

<!-- COMMENT LISTING -->

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= comment.user.first %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <td><%= link_to 'Edit', edit_post_comment_path(@post, comment) %></td>
  <td><%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
 
<!-- END OF COMMENT LISTING -->
<!-- COMMENT INSERTING -->

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<!-- END OF COMMENT INSERTING  -->



<%= link_to 'Edit this ad', edit_post_path(@post) %> |
<%= link_to 'Back to ads page', posts_path %>
<% id = @post.user_id %>
<% unless @post.user == current_user %>
	| <%= link_to 'Send Message', new_conversation_path(:id => id) %>
<% end %>
